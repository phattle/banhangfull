@model OnChotto.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Lấy lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section BreadCrumbs{
    <li><a href="#">@ViewBag.Title</a></li>
}
<h1 class="page-title">Nhập địa chỉ email:</h1>
<div class="block block-white">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            <label for="Email" class="control-label">Nhập địa chỉ email:</label>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control unicase-form-control" })

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Gửi yêu cầu" />
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}