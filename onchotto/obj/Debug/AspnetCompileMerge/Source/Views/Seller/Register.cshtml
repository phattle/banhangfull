@model OnChotto.Models.RegisterSellerViewModel

@using OnChotto.Models
@{
    ViewBag.Title = "Đăng ký tài khoản bán hàng Smua";
    Layout = "~/Views/Shared/_ClearLayout.cshtml";
}
<style>
    a:link {
        color: #2192d9;
    }

    a:visited {
        color: #0073bd;
    }
</style>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Register", "Seller", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <h1 class="page-title">Chúc mừng! Chỉ còn một bước nữa để bắt đầu bán hàng với Smua.</h1>

                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-2 control-label">
                        Loại hình:
                    </div>
                    <div class="col-md-9">
                        @Html.RadioButtonFor(model => model.Type, "CaNhan", false)@Html.Label("Cá nhân")
                        @Html.RadioButtonFor(model => model.Type, "CongTy", false)@Html.Label("Công ty")
                    </div>
                    @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control unicase-form-control" })
                        </div>*@
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AddressWarehouse, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.AddressWarehouse, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control unicase-form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control unicase-form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control unicase-form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.StandName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.StandName, new { @class = "form-control unicase-form-control" })
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <span>@Html.CheckBoxFor(m => m.IsRead, false)</span>
                            <span>Tôi đã đọc và đồng ý với OnChotto <a href="https://drive.google.com/file/d/12ukh5maqIGlIwpmuh10n9qeqeSDbfRAR/view" target="_blank">Điều khoản và Điều Kiện</a>.</span>
                        </div>
                    </div>
                 <!--View rCAPTCHA-->
                    <div class="form-group">
                        Bạn xác nhận reCAPTCHA đăng ký tài khoản!
                    </div>
                        <div class="form-group">
                            @Html.reCaptcha()
                        </div>
                <!--End View rCAPTCHA-->
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-6">
                                <input type="submit" class="btn btn-success" value="Đăng ký" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                Bạn đã có tài khoản, @Html.ActionLink("Đăng nhập", "Login") |
                                @Html.ActionLink("Quên mật khẩu ?", "ForgotPassword")
                            </div>
                        </div>
            }


        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @{ Html.RenderPartial("Partials/_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl }); }
        </section>
    </div>
</div>



@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
