@using OnChotto.Models.Entities
@using OnChotto.Models.Dao
<!-- ============================================================= FOOTER ============================================================= -->
<footer id="footer" class="hidden-print footer color-bg">
    <div class="footer-bottom links-social inner-bottom-sm">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <!-- ============================================================= CONTACT INFO ============================================================= -->
                    <div class="contact-info">
                        <div class="footer-logo">
                            <a href="/" title="onchotto.com - Hàng chất - giá giảm thật">
                                <img src="@OptionDao.GetOption("FOOTER_LOGO")" alt="@OptionDao.GetOption("SITE_NAME")" class="img-logo img-responsive" style="max-width: 65%;"/>
                            </a>
                        </div><!-- /.footer-logo -->
                        <div class="module-body m-t-20">
                            <ul class="contact list-unstyled">
                                <li>
                                    <strong>@Resources.Resource.address : </strong> @OptionDao.GetOption("CONTACT_ADDRESS")
                                </li>
                                <li>
                                    <strong>Hotline: </strong> @OptionDao.GetOption("FOOTER_HOTLINE")
                                </li>
                                <li>
                                    <strong>Email: </strong><a href="@OptionDao.GetOption("CONTACT_EMAIL")">@OptionDao.GetOption("CONTACT_EMAIL")</a>
                                </li>
                            </ul>
                            <div class="social-icons m-t-20">
                                <a href="@OptionDao.GetOption("LINK_FACEBOOK")" class="active"><i class="icon fa fa-facebook"></i></a>
                                <a href="@OptionDao.GetOption("LINK_GOOGLE_PLUS")"><i class="icon fa fa-google-plus"></i></a>
                                <a href="@OptionDao.GetOption("LINK_TWITTER")"><i class="icon fa fa-twitter"></i></a>
                                <a href="@OptionDao.GetOption("LINK_RSS")"><i class="icon fa fa-rss"></i></a>
                            </div><!-- /.social-icons -->
                        </div><!-- /.module-body -->
                    </div><!-- /.contact-info -->
                    <!-- ============================================================= CONTACT INFO : END ============================================================= -->
                </div><!-- /.col -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="module-heading">
                        <h4 class="heading-title ud-line module-title">@Resources.Resource.introduce</h4>
                    </div><!-- /.module-heading -->
                    <div class="module-body">
                        <ul class="list-unstyled">
                            @foreach (Menu m in ViewBag.MenuGioiThieu)
                            {
                                <li><a href="@m.Url" title="@Html.Raw(m.Text)" target="@m.Target">@Html.Raw(m.Text)</a></li>
                            }
                        </ul>
                    </div><!-- /.module-body -->
                </div><!-- /.col -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="module-heading">
                        <h4 class="module-title heading-title ud-line"> @Resources.Resource.support </h4>
                    </div><!-- /.module-heading -->
                    <div class="module-body">
                        <ul class="list-unstyled">
                            @foreach (Menu m in ViewBag.MenuTroGiup)
                            {
                                <li><a href="@m.Url" title="@Html.Raw(m.Text)" target="@m.Target">@Html.Raw(m.Text)</a></li>
                            }
                           
                        </ul>
                    </div><!-- /.module-body -->
                </div><!-- /.col -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="module-heading">
                        <h4 class="module-title heading-title ud-line"> @Resources.Resource.certificate  </h4>
                    </div><!-- /.module-heading -->
                    <div class="module-body">
                        <img src="~/Content/images/bocongthuong_red.png" alt="onchotto.com - Hàng chất - giá tốt nhất!" height="65" class="img-logo img-responsive" style="max-width: 56%;" />
                    </div><!-- /.module-body -->
                </div><!-- /.col chung nhan BCT -->

                <div class="col-xs-12 col-sm-6 col-md-3">
                    <!-- ============================================================= INFORMATION============================================================= -->
                    <div class="contact-information">
                        <div class="module-body">
                            @Html.Raw(OptionDao.GetOption("FACEBOOK_LIKEBOX"))
                        </div><!-- /.module-body -->
                    </div><!-- /.contact-timing -->
                    <!-- ============================================================= INFORMATION : END ============================================================= -->
                    
                

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.links-social -->
    <div class="copyright-bar">
        <div class="container">
            <div class="col-xs-12 col-sm-6 no-padding">                
                <div class="copyright">
                    Copyright © 2016
                    <a href="/">@OptionDao.GetOption("SITE_NAME")</a>

                    - All Rights Reserved
                    &nbsp;
                    <a href="//www.dmca.com/Protection/Status.aspx?ID=531c87a1-966a-46c1-8a48-8d5b04db4e89" target="_blank" title="DMCA.com Protection Status" class="dmca-badge">
                        <img src="//images.dmca.com/Badges/dmca_protected_sml_120g.png?ID=531c87a1-966a-46c1-8a48-8d5b04db4e89" alt="DMCA.com Protection Status">
                    </a>
                    <script src="//images.dmca.com/Badges/DMCABadgeHelper.min.js"> </script>

  <!-- ============================================================= PHONERING============================================================= -->
                    @Html.Partial("Partials/_FloatCallNow")
  <!-- ============================================================= PHONERING : END============================================================= -->
                </div>
            </div>
          
            <div class="col-xs-12 col-sm-6 no-padding">                
                <div class="clearfix payment-methods">
                    <ul>
                        <li>@OnChotto.Commons.DataHelper.GetVisitorDetails() </li>
                        <li><img src="~/Content/images/payments/1.png" alt=""></li>
                        <li><img src="~/Content/images/payments/2.png" alt=""></li>
                        <li><img src="~/Content/images/payments/3.png" alt=""></li>
                        <li><img src="~/Content/images/payments/4.png" alt=""></li>
                        <li><img src="~/Content/images/payments/5.png" alt=""></li>
                    </ul>
                </div><!-- /.payment-methods -->
            </div>
        </div>
    </div>
   
</footer>
<!-- ============================================================= FOOTER : END============================================================= -->

@Html.Partial("Partials/_FooterScripts")
