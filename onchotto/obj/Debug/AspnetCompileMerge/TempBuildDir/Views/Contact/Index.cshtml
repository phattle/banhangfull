@using OnChotto.Models.Dao
@model OnChotto.Models.Entities.Contact


@{
    ViewBag.Title = "Liên hệ " + OptionDao.GetOption("SITE_NAME");
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section BreadCrumbs{
    <li><a href="#" class="active">@ViewBag.Title</a></li>
}

<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="block widget-contact">
            <h2 class="widget-title">Liên hệ @OptionDao.GetOption("SITE_NAME")</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <p class="">Mọi đóng góp ý kiến của khách hàng sẽ được chúng tôi tiếp nhận và phản hồi qua thông tin đăng ký dưới đây</p>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.ContactName, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.ContactEmail, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactEmail, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(model => model.ContactPhone, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.ContactPhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows = 5 })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary" value="GỬI Ý KIẾN" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="nopadding-left col-lg-6 col-md-6">
        <div class="block widget-contact">
            <ul>
                <li><h3>@OptionDao.GetOption("SITE_NAME")</h3></li>
                <li><span>Trụ sở chính:</span><span>@OptionDao.GetOption("CONTACT_ADDRESS")</span></li>
                <li><span>Email:</span><span>@OptionDao.GetOption("CONTACT_EMAIL")</span></li>
                <li><span>Hotline:</span><span>@OptionDao.GetOption("HOTLINE")</span></li>
            </ul>
            <h5>Bản đồ chỉ dẫn</h5>

            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1107.9622600710027!2d106.66248037032878!3d10.740413236250326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752e5a420d231d%3A0x95e3ea5e9c9c4450!2zNTcsIDM4LzYgQsO0bmcgU2FvLCBwaMaw4budbmcgNSwgUXXhuq1uIDgsIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1582802860848!5m2!1svi!2s" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
         </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
