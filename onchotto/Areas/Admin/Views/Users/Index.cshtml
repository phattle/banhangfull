@model IEnumerable<OnChotto.Models.ApplicationUser>

@using OnChotto.Models.Dao

@{
    ViewBag.Title = "Quản lý thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="box">
    <div class="box-body">
        <table class="table table-bordered table-hover">

            <thead>

                <tr>
                    <th>#</th>

                    <th>Họ tên</th>

                    <th>Tên đăng nhập</th>

                    <th>Email</th>

                    <th>Giới tính</th>

                    <th>Địa chỉ</th>

                    <th>Nhóm quyền</th>

                    <th>Thao tác</th>

                </tr>

            </thead>

            <tbody>
                @{
                    var stt = 0;
                }
                @foreach (var item in Model)

                {

                    <tr>
                        <td>@( stt++ )</td>

                        <td>@item.FullName</td>

                        <td>@item.UserName</td>

                        <td>@item.Email</td>

                        <td>@(item.Gender == true ? "Nam" : "Nữ")</td>

                        <td>@item.Address</td>

                        <td>
                            @item.PrintRoles()
                        </td>

                        <td>

                            @Html.ActionLink("Sửa", "Edit", new { Id = item.Id }, null) |

                            @Html.ActionLink("Phân quyền", "EditRole", new { Id = item.Id }, null) |

                            @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)

                        </td>

                    </tr>

                }

            </tbody>

        </table>
    </div>
</div>



