<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section scripts{
    <script>
        // Hàm Ajax Lấy District
        $("#ProvinceId").select2().on("change", function (e) {
            getDistricts();
            getWard();
        });


        $("#DistrictId").select2().on("change", function (e) {
            getWard();
        });
                
        function getDistricts() {
            var data = {
                provinceId: $("#ProvinceId").val(),
            };

            $.ajax({
                url: '/Home/AjaxGetDistrictByProvice',
                type: 'POST',
                dataType: 'html',
                data: data,
                success: function (html) {
                    $('#DistrictId').html(html);
                    $('#DistrictId').select2();
                },
                complete: function () {
                    //Lay danh sach nha van chuyen
                    getTransport();
                },
                error: function (err) {
                    alert("Lỗi hệ thống, ấn F5 để refresh lại trình duyệt để tiếp tục.");
                }
            });
        }

        function getWard() {
            var data = {
                districtId: $("#DistrictId").val(),
            };

            $.ajax({
                url: '/Home/AjaxGetWardsByDistrict',
                type: 'POST',
                dataType: 'html',
                data: data,
                success: function (html) {
                    $('#WardId').html(html);
                    $('#WardId').select2();
                },
                complete: function () {
                    //Lay danh sach nha van chuyen
                    getTransport();
                },
                error: function (err) {
                    alert("Lỗi hệ thống, ấn F5 để refresh lại trình duyệt để tiếp tục.");
                }
            });
        }
    </script>
}